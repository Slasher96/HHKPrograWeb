@model ProyectoPrograWebHHK.Models.ProductModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bienvenido a HHk</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap core CSS -->
    <link href="~/scripts/bootstrap-4.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/scripts/css/IndexStyle.css" rel="stylesheet">
</head>
<body>
    <main role="main">
        <div style="margin-left: 10px; margin-right:10px; margin-top:10px">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="first-slide" src="~/Resources/Images/Cinta-Harley107.jpg" alt="First slide" width="200" height="200">
                        <div class="container">
                            <div class="carousel-caption text-left">
                                <h1>Harley Davidson</h1>
                                <p>Con esta motocicleta iras a todos lados</p>
                                <p><a class="btn btn-lg btn-primary" onclick="buyNow(1)" role="button">Agregar al Carrito</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="second-slide" src="~/Resources/Images/Cinta-harley2020.jpg" alt="Second slide">
                        <div class="container">
                            <div class="carousel-caption">
                                <h1>Harley Davidson 2020</h1>
                                <p>A un espectacular precio..</p>
                                <p><a class="btn btn-lg btn-primary" onclick="buyNow(2)" role="button">Agregar al Carrito</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="third-slide" src="~/Resources/Images/cinta-HondaRoja.jpg" alt="Third slide">
                        <div class="container">
                            <div class="carousel-caption text-right">
                                <h1>Nuestra primer honda</h1>
                                <p style=" font-weight:bold; ">La adorada por todos Honda Shadow Custom Edition</p>
                                <p><a class="btn btn-lg btn-primary" onclick="buyNow(3)" role="button">Agregar al Carrito</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <hr class="featurette-divider">

        @foreach (var item in Model.ListaMotocicletas.Skip(3))
        {
            <div class="row featurette">
                <div class="col-md-7 order-md-2">
                    <h2 class="featurette-heading">@item.Descripcion</h2>
                    <p class="lead">$ @item.Costo</p>
                    <p><a class="btn btn-lg btn-primary" onclick="buyNow(@item.Sku)" role="button">Agregar al Carrito</a></p>
                </div>
                <div class="col-md-5 order-md-1">
                    <img class="featurette-image img-fluid mx-auto" src="~/Resources/Images/Motocicletas/@item.RutaImagen" alt="Generic placeholder image">
                </div>
            </div>
        }

    </main>
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/scripts/JS/vendor/jquery/jquery-3.2.1.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/scripts/JS/vendor/bootstrap/js/popper.js")"></script>
    <script src="@Url.Content("~/scripts/JS/vendor/bootstrap/js/bootstrap.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/scripts/JS/vendor/select2/select2.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/scripts/JS/main.js")"></script>
    <script src="~/scripts/bootstrap-4.0.0/assets/js/vendor/popper.min.js"></script>
    <script src="~/scripts/bootstrap-4.0.0/dist/js/bootstrap.min.js"></script>
    <!-- Just to make our placeholder images work. Don't actually copy the next line! -->
    <script src="~/scripts/bootstrap-4.0.0/assets/js/vendor/holder.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
</body>
</html>
<script>
    function buyNow(id)
    {
        $.ajax({
                type: 'POST',
                url: '@Url.Action("BuyNow","Client")', 

                dataType: 'json',

                data: {idProducto: id },

            success: function (a) {

                },
                error: function () {
                    alert('Debe iniciar sesión para poder comprar');
                }
            });
    }
   
</script>